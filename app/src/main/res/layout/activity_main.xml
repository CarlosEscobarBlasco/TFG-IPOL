<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:background="@android:color/background_light">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/app_name2"
        android:id="@+id/textView"
        android:textSize="@dimen/_40sdp"
        android:textColor="@android:color/secondary_text_light"
        android:editable="false"
        android:elegantTextHeight="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="@dimen/_120sdp"
        android:layout_height="@dimen/_120sdp"
        android:text="@string/favs"
        android:id="@+id/button2"

        android:drawableTop="@android:drawable/star_big_off"
        android:paddingTop="@dimen/_40sdp"
        android:layout_below="@+id/searchText"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="@dimen/_120sdp"
        android:layout_height="@dimen/_120sdp"
        android:text="@string/topics"
        android:id="@+id/button"
        android:layout_marginTop="44dp"
        android:layout_below="@+id/button2"
        android:layout_centerHorizontal="true"
        android:drawableTop="@android:drawable/sym_action_chat"
        android:paddingTop="@dimen/_40sdp"/>

    <Button
        android:layout_width="@dimen/_120sdp"
        android:layout_height="@dimen/_120sdp"
        android:text="@string/hist"
        android:id="@+id/button3"
        android:layout_alignTop="@+id/button2"
        android:layout_alignParentEnd="true"
        android:drawableTop="@android:drawable/ic_menu_view"
        android:paddingTop="@dimen/_40sdp"/>

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/searchText"
        android:inputType="text"
        android:theme="@style/MyEditTextTheme"
        android:layout_below="@+id/textView"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/searchButton">
    </EditText>

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/searchButton"
        android:layout_alignBottom="@+id/searchText"
        android:layout_alignTop="@+id/searchText"
        android:layout_alignEnd="@+id/button3"
        android:contentDescription="@string/imgDescription"
        android:src="@android:drawable/ic_menu_search"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:layout_alignEnd="@+id/button2"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/textView"
        android:src="@"/>


</RelativeLayout>